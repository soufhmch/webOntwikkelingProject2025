<%- include('partials/navbar') %>

    <div class="min-h-screen bg-gray-900 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <!-- Login Formulier -->
            <div class="bg-gray-800 rounded-lg p-8 shadow-xl">
                <h2 class="text-3xl font-bold mb-8 text-center">Inloggen</h2>
                <% if (error) { %>
                    <div class="mb-4 text-red-400 text-center">
                        <%= error %>
                    </div>
                    <% } %>
                        <form action="/login" method="POST">
                            <div class="space-y-6">
                                <div>
                                    <label class="block text-sm font-medium mb-2">E-mail</label>
                                    <input type="email" name="email" required
                                        class="w-full px-4 py-3 bg-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium mb-2">Wachtwoord</label>
                                    <input type="password" name="password" required
                                        class="w-full px-4 py-3 bg-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                                </div>
                                <button type="submit"
                                    class="w-full bg-blue-600 py-3 rounded-lg hover:bg-blue-700 transition font-semibold">
                                    Inloggen
                                </button>
                            </div>
                        </form>

                        <div class="mt-8 text-center">
                            <p class="text-gray-400">
                                Nog geen account?
                                <a href="/login?showRegister=true" class="text-blue-400 hover:text-blue-300 transition">
                                    Registreer hier!
                                </a>
                            </p>
                        </div>
            </div>

            <!-- Registratie Popup -->
            <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 <%= locals.showRegister ? '' : 'hidden' %>"
                id="registerModal">
                <div class="bg-gray-800 rounded-lg p-8 max-w-md w-full relative">
                    <button id="closeRegister" class="absolute top-4 right-4 text-gray-400 hover:text-white">âœ•</button>
                    <h2 class="text-3xl font-bold mb-6 text-center">Registreren</h2>
                    <form action="/register" method="POST">
                        <div class="space-y-6">
                            <div>
                                <label class="block text-sm font-medium mb-2">Naam</label>
                                <input type="text" name="name" required
                                    class="w-full px-4 py-3 bg-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                            </div>
                            <div>
                                <label class="block text-sm font-medium mb-2">E-mail</label>
                                <input type="email" name="email" required
                                    class="w-full px-4 py-3 bg-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                            </div>
                            <div>
                                <label class="block text-sm font-medium mb-2">Wachtwoord</label>
                                <input type="password" name="password" required
                                    class="w-full px-4 py-3 bg-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                            </div>
                            <button type="submit" class="relative" id="submitBtn">
                                <span class="when-enabled">Registreer</span>
                                <span class="when-disabled hidden">Bezig...</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>